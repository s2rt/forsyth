
	
	<div class="hero-unit">
		<h1><%= @featured_product.title%></h1>
		<p><%= image_tag(@featured_product.image_url, :style => "float:left;padding:10px;") %><%= sanitize(@featured_product.description)%></p>
		<p>
		<%= link_to sanitize("Learn more &raquo;"), {:controller => "products", :action => "show", :id => @featured_product.id}, :class => "btn btn-primary btn-large" %>
		</p>
	</div>
	
	<div class="row-fluid">
		<div class="span4">
			<h2>Recent work</h2>
			<p>
			<% @last_four_products.each do |product|%>
			<%= link_to product.title, :controller => "products", :action => "show", :id => product.id%></br>
			<%end%>
			</p>
			<p><a class="btn" href="#">View details &raquo;</a></p>
		</div><!--/span-->
		<div class="span4">
			<h2>Tumblr</h2>
			<p>Last 5 tumblr posts with links back to Tumblr</p>
		</div><!--/span-->
		<div class="span4">
			<h2>Twitter</h2>
			<p><script charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js"></script>
			<script>
			new TWTR.Widget({
			version: 2,
			type: 'profile',
			rpp: 4,
			interval: 30000,
			width: 250,
			height: 300,
			theme: {
			shell: {
			background: '#ffffff',
			color: '#121212'
			},
			tweets: {
			background: '#ffffff',
			color: '#000000',
			links: '#0a12a8'
			}
			},
			features: {
			scrollbar: false,
			loop: false,
			live: true,
			behavior: 'all'
			}
			}).render().setUser('s2rt').start();
			</script>
			</p>
			<p><a class="btn" href="https://twitter.com/about/resources/widgets/widget_profile">Wigit</a></p>
		</div><!--/span-->
	</div><!--/row-->




